.page {
    background-color: #f4f4f4;
    min-height: 100vh;
    width: 100v;
}
.header {
}

.header .video {
    width: 100vw;
    height: calc(100vw * (9/16));

}

.header .title {
    height: 106rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    padding-left: 50rpx;
    font-size: 30rpx;
    font-weight: bold;
}

.page .content {
    margin-top: 30rpx;
    padding: 0 50rpx;
}

.content .title {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 24rpx;
    font-weight: bold;
    margin-bottom: 50rpx;
}

.content .title image {
    margin-left: 15rpx;
    width: 20rpx;
    height: 20rpx;
}

.content .category-area {
    width: 100%;
    height: 40rpx;
    overflow: hidden;
    margin-bottom: 50rpx;
}

.category-area .category {
    float: left;
    margin-right: 66rpx;
    font-size: 25rpx;
    padding-bottom: 8rpx;
    color: #7d7d7c;
}

.category-area .category.active {
    color: #000;
    font-weight: bold;
    border-bottom: 4rpx solid #000;
}

.video-list-area .section .video-list-title {
    font-size: 34rpx;
    font-weight: bold;
    margin-bottom: 30rpx;
}

.video-list-area .section .video-list .video-box {
    width: 47%;
    margin-right: 3%;
    float: left;
    margin-bottom: 34rpx;
}

.video-list-area .section .video-list .video-box .cover {
   height: 200rpx;
   width: 100%;
   border-radius: 12rpx;
   margin-bottom: 20rpx;
}

.video-list-area .section .video-list .video-box .video-title {
    font-size: 24rpx;
    font-weight: bold;
    text-align: center;
}
