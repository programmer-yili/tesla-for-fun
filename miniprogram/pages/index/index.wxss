/* pages/index/index.wxss */

swiper {
    height: 100%;
}

.swiper-area {
    width: 100%;
    height: 85vh;
    position: relative;
}

.swiper-area .swiper-item {
    height: 100%;
    position: relative;
}

.swiper-area .swiper-content {
    pointer-events: none;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.swiper-content .title {
    font-size: 80rpx;
    margin-top: 250rpx;
}

.swiper-content .meta {
    width: 100%;
    margin-top: 500rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
}
.meta .items {
    color: #ffffff;
    display: flex;
    flex-direction: column;
    align-items: center;
}

@keyframes fadeIn {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

.meta .items .item-title {
    font-size: 40rpx;
    animation: fadeIn 2s;
}

.meta .items .item-subtitle {
    margin-top: 10rpx;
    font-size: 25rpx;
    animation: fadeIn 2s;
}

.swiper-content .action {
    margin-top: 70rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}



.swiper-area .swiper-item image {
    display: block;
    width: 100%;
    height: 100%;
}

.swiper-dots {
    position: absolute;
    bottom: 40rpx;
    left: 0;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.swiper-dots .dot {
    width: 80rpx;
    height: 6rpx;
    background-color: #bcbcb7;
}

.swiper-dots .active {
    background-color: #ffffff;
}

.boot-btn {
    border-radius: 80rpx;
    overflow: hidden;
    position: relative;
    z-index: 1;
}
.boot-btn button {
    color: #ffffff;
    background: none;
    z-index: 1;
    width: 100%;
    height: 100%;
    font-size: 24rpx;
}

.boot-btn .boot-btn-back {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: #000000;
    z-index: 0;
    opacity: 0.4;
}

.action .view-configuration {
    margin-top: 8rpx;
    font-size: 24rpx;
    color: #ffffff;
    text-decoration: underline;
}

/* 月刊 */
.magazine-area {
    height: 940rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.magazine-area .title {
    margin-top: 120rpx;
    font-size: 50rpx;
}

.magazine-area .magazine-cover {
    margin-top: 44rpx;
    width: 441rpx;
    height: 555rpx;
}

.magazine-area .magazine-title {
    margin-top: 24rpx;
    font-size: 30rpx;
}

.page {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
}


.icon-banner {
    width: 87vw;
    height: 244rpx;
    background-color: #f4f4f6;
    border-radius: 20rpx;
    position: relative;
    overflow: hidden;
    margin-bottom: 54rpx;
}

.icon-banner .banner-bg {
    width: 87vw;
    height: 244rpx;
    position: absolute;
    top: 0;
    right: 0rpx;
}

.icon-banner  .credit-card {
    width: 244rpx;
    height: 244rpx;
    overflow: hidden;
    right: 48rpx;
}

.icon-banner .content {
    position: absolute;
    top: 70rpx;
    left: 55rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    z-index: 2;
}

.icon-banner .content .info {
    display: flex;
    flex-direction: column;
}
.icon-banner .content .info .title {
    font-size: 35rpx;
    font-weight: bold;
    margin-bottom: 24rpx;
}
.icon-banner .content .info .subtitle {
    font-size: 24rpx;
}


.icon-box-area {
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    display: flex;
    flex-direction: row;
    width: 100vw;
    justify-content: space-evenly;
}

.icon-box {
    width: 20vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 30rpx;
}

.icon-box .icon {
    height: 112rpx;
    width: 112rpx;
}

.tradin image {
    height: 72rpx;
    width: 72rpx;
    padding: 20rpx;
}

