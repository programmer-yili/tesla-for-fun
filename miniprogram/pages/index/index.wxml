<view class="page">
    <view class="swiper-area">
        <swiper bindchange="onSwiperChange">
            <swiper-item wx:for="{{ list }}" wx:key="index">
                <view class="swiper-item">
                    <image src="{{item.imageUrl}}" mode="aspectFill"></image>
                </view>
            </swiper-item>
        </swiper>
        <view wx:for="{{ list }}" wx:key="index" wx:if="{{ index == current }}" class="swiper-content">
            <view class="title">
                {{ item.title }}
            </view>

            <view class="meta">
                <view wx:for="{{ item.specs }}" wx:key="index" class="items">
                    <view class="item-title">{{ item.title }}</view>
                    <view class="item-subtitle">{{ item.subtitle }}</view>
                </view>
            </view>

            <view class="action">
                <view class="boot-btn">
                    <button>预约试驾</button>
                    <view class="boot-btn-back"></view>
                </view>
                <view class="view-configuration">查看配置</view>
            </view>
        </view>
        <view class="swiper-dots">
            <view wx:for="{{ list }}" wx:key="index" class="dot {{ current == index ? 'active': '' }}"></view>
        </view>
    </view>
    <view class="magazine-area">
        <view class="title">T zone</view>
        <image class="magazine-cover" src="https://gimg2.baidu.com/image_search/src=http%3A%2F%2Fhbimg.b0.upaiyun.com%2Fbff416e448358bfe1821fe7f2b4fc6ece6dd234276c77-jLNwzW_fw658&refer=http%3A%2F%2Fhbimg.b0.upaiyun.com&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=jpeg?sec=1637763571&t=0b44011604724257d544ab14c280b7e4"></image>
        <view class="magazine-title">2021年9月号</view>
    </view>

    <view class="icon-banner">
        <view class="content">
            <view class="info">
                <view class="title">贷款计算器</view>
                <view class="subtitle">定制我的金融方案</view>
            </view>
            <image class="icon" src="https://636c-cloud1-4g2sqww73b1fdf3f-1306568592.tcb.qcloud.la/card-image.jpg?sign=5235addfa4af6fad68a9d2bd4cd72184&t=1635173759"></image>
        </view>
    </view>

    <view class="icon-banner">
        <view class="content">
            <view class="info">
                <view class="title">新手视频</view>
                <view class="subtitle">观看视频</view>
            </view>
            <image class="icon" src="https://636c-cloud1-4g2sqww73b1fdf3f-1306568592.tcb.qcloud.la/video.jpg?sign=c6f841a19b811250e99008640d65c020&t=1635174293"></image>
        </view>
    </view>
</view>