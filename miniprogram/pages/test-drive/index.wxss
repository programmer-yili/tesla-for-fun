/* pages/test-drive/index.wxss */

.form-tip {
    font-size: 28rpx;
    color: #888888;
    text-align: center;
    margin: 40rpx auto;
}

.input-item {
    width: 100%;
    display: flex;
    flex-direction: column;
}

.input-item .label {
    padding: 20rpx 25rpx;
    font-size: 25rpx;
}

.input-item input {
    padding: 24rpx 25rpx;
    background-color: #fff;
    font-size: 30rpx;
    font-weight: bold;
    color: #000;
    border-radius: 50rpx;
}

.name-area {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
}

.name-area .name-box {
    width: 45%;
}

.form {
    padding: 0 30rpx;
}

.form-item {
    margin-top: 30rpx;
    width: 100%;
    display: flex;
    align-items: center;
}

.form-item .label{
    margin-left: 15rpx;
    font-size: 25rpx;
    font-weight: bold;
}

.form .bottom-tips {
    margin: 36rpx auto 50rpx;
    font-size: 22rpx;
    color: #777777;

}

.form .test-drive-btn {
    background-color: #486ada;
    color: #fff;
    line-height: 80rpx;
    text-align: center;
    font-weight: bold;
    font-size: 30rpx;
    width: 100%;
    height: 80rpx;
    border-radius: 80rpx;
}

.get-phone-btn {
    width: 170rpx!important;
    font-size: 24rpx;
    padding: 8rpx 10rpx;
    background-color: #000!important;
}
